# EmergencyGuard Environment Configuration

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server port
PORT=3000

# Node environment
NODE_ENV=development

# Server URL (for API references)
SERVER_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION  
# ==============================================

# Database type (sqlite | postgresql)
DATABASE_TYPE=sqlite

# SQLite configuration (for development)
SQLITE_DATABASE_PATH=./database/emergency_guard.db

# PostgreSQL configuration (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/emergency_guard
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=emergency_guard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# ==============================================
# EMERGENCY SERVICES API INTEGRATION
# ==============================================

# Twilio SMS service (for emergency notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid email service (for emergency notifications)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@emergencyguard.com

# ==============================================
# LOCATION SERVICES
# ==============================================

# Google Maps API (for geocoding and emergency services lookup)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================

# JWT secret for session management
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Session secret
SESSION_SECRET=your_session_secret_key

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key

# ==============================================
# EXTERNAL EMERGENCY SERVICES APIs
# ==============================================

# Emergency dispatch API (if available)
EMERGENCY_DISPATCH_API_URL=https://api.emergencyservices.gov
EMERGENCY_DISPATCH_API_KEY=your_emergency_api_key

# National emergency services database
EMERGENCY_SERVICES_DB_URL=https://api.emergencydb.gov
EMERGENCY_SERVICES_DB_KEY=your_services_db_key

# ==============================================
# PUSH NOTIFICATIONS
# ==============================================

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# Apple Push Notification Service
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_BUNDLE_ID=com.emergencyguard.app

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Sentry error tracking
SENTRY_DSN=your_sentry_dsn

# Log level (error | warn | info | debug)
LOG_LEVEL=info

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Demo mode (disables real emergency calls)
DEMO_MODE=true

# Test emergency numbers (comma-separated)
TEST_EMERGENCY_NUMBERS=555-TEST-911,555-TEST-112

# Mock notification delay (milliseconds)
MOCK_NOTIFICATION_DELAY=1000

# ==============================================
# EXTERNAL INTEGRATIONS
# ==============================================

# Geolocation service backup
GEOLOCATION_SERVICE_API_KEY=your_geolocation_api_key

# Weather service (for emergency conditions)
WEATHER_API_KEY=your_weather_api_key

# ==============================================
# PING MESSAGE (EXAMPLE)
# ==============================================

# Custom ping message for health checks
PING_MESSAGE=EmergencyGuard API is running
